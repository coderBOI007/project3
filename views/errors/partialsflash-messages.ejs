<% if (messages && messages.error) { %>
    <div class="alert error">
        <%= messages.error %>
    </div>
<% } %>

<% if (messages && messages.success) { %>
    <div class="alert success">
        <%= messages.success %>
    </div>
<% } %>

<% if (messages && messages.info) { %>
    <div class="alert info">
        <%= messages.info %>
    </div>
<% } %>

<style>
    .alert {
        padding: 12px 15px;
        border-radius: 5px;
        margin-bottom: 20px;
        border: 1px solid transparent;
    }
    
    .alert.error {
        background: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }
    
    .alert.success {
        background: #d1edff;
        color: #155724;
        border-color: #c3e6cb;
    }
    
    .alert.info {
        background: #d1ecf1;
        color: #0c5460;
        border-color: #bee5eb;
    }
</style>